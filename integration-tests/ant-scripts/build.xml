<?xml version="1.0" encoding="UTF-8" ?>
<project name="build-common" default="prepare-test-environment">

	<taskdef resource="net/sf/antcontrib/antlib.xml">
		<classpath>
			<pathelement location="${maven.repo.local}/ant-contrib/ant-contrib/1.0b3/ant-contrib-1.0b3.jar" />
		</classpath>
	</taskdef>

	<target name="prepare-test-environment" depends="copy-files">
		<echo>Finishing the integration environment preparation</echo>
	</target>

	<target name="copy-files">
		<if>
			<isset property="picketlink.binding" />
			<then>
				<echo>Copying PicketLink libraries (${picketlink.binding}) from ${maven.repo.local} to ${jboss.as.picketlink.lib.dir}</echo>

				<if>
					<available file="${jboss.as.picketlink.lib.dir}" type="dir" />
					<else>
						<mkdir dir="${jboss.as.picketlink.lib.dir}" />
					</else>
				</if>

				<copy todir="${jboss.as.picketlink.lib.dir}" file="${maven.repo.local}/org/picketlink/picketlink-core/${version.picketlink}/picketlink-core-${version.picketlink}.jar" />
				<copy todir="${jboss.as.picketlink.lib.dir}" file="${maven.repo.local}/org/picketlink/distribution/picketlink-${picketlink.binding}/${version.picketlink}/picketlink-${picketlink.binding}-${version.picketlink}.jar" />
			</then>
		</if>

		<echo>Copying custom configuration files from ${basedir}/dist/custom-conf</echo>
		<if>
			<available file="${basedir}/dist/custom-conf" type="dir" />
			<then>
				<copy todir="${JBAS_CONFIG_ROOT}">
					<fileset dir="${basedir}/dist/custom-conf" />
				</copy>
			</then>
		</if>
	</target>


</project>
