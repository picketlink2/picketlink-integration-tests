			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.maven.plugins</groupId>
							<artifactId>maven-dependency-plugin</artifactId>
							<version>2.1</version>
							<inherited>true</inherited>
							<executions>
								<execution>
									<id>unpack-xacml-test-classes</id>
									<phase>process-test-classes</phase>
									<goals>
										<goal>unpack</goal>
									</goals>
									<configuration>
										<artifactItems>
											<artifactItem>
												<groupId>org.picketlink</groupId>
												<artifactId>picketlink-integration-util-unit-tests</artifactId>
												<version>${project.version}</version>
												<type>test-jar</type>
												<overWrite>true</overWrite>
												<outputDirectory>${basedir}/target/test-classes</outputDirectory>
											</artifactItem>
											<artifactItem>
												<groupId>org.picketlink</groupId>
												<artifactId>picketlink-integration-xacml-unit-tests</artifactId>
