												<overWrite>true</overWrite>
												<outputDirectory>${basedir}/target/test-classes</outputDirectory>
											</artifactItem>
										</artifactItems>
									</configuration>
								</execution>
							</executions>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
